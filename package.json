{
	"name": "crawl-me-maybe",
	"version": "1.0.0",
	"author": "Nathan Nye <nathan@nye.design> (https://nye.design)",
	"license": "MIT",
	"main": "index.ts",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "tsup",
		"build:packages": "pnpm -r build",
		"prepare": "husky",
		"precommit": "lint-staged",
		"postversion": "pnpm build:packages && git add . && git commit --amend --no-edit",
		"lint": "biome lint .",
		"lint:fix": "biome lint . --write",
		"format": "biome format . --write",
		"format:check": "biome format . --check",
		"version:patch": "pnpm version patch",
		"version:minor": "pnpm version minor",
		"version:major": "pnpm version major"
	},
	"devDependencies": {
		"@types/node": "^24.8.1",
		"@biomejs/biome": "^1.9.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.{ts,tsx,js,jsx,json,md,css}": [
			"biome check --write"
		]
	}
}
